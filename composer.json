{
    "name": "amperstand/url-shortener",
    "description": "A url shortner built for amperstand tech test",
    "require": {
        "slim/slim": "4.1",
        "slim/psr7": "^1.3",
        "slim/http": "1.2.0",
        "php-di/php-di": "^6.3"
    },
    "autoload" : {
      "psr-4" : {
          "App\\" : "app/",
          "App\\Test\\": "tests/"
      }
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
